@model IEnumerable<Applicative_Order.Models.Recipe>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.productCalla.nameProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nameRecipe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numberBunch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numberStemsPerBunch)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.productCalla.nameProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nameRecipe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numberBunch)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numberStemsPerBunch)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.recipeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.recipeID }) |
